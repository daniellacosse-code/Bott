{
  "tasks": {
    "start:app": "cd app && deno task start",
    "start": "docker build -t bott . && docker run -p 8080:8080 --env-file=.env.production bott",
    "deploy": "sh ./deploy.sh"
  },
  "workspace": [
    "./data",
    "./helpers/gemini",
    "./helpers/discord",
    "./app"
  ],
  "fmt": {
    "options": {
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuotes": false,
      "proseWrap": "always",
      "importOrder": [
        "@bott/data",
        "@bott/gemini",
        "@bott/discord"
      ]
    }
  }
}